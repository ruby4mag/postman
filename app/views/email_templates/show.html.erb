<%- model_class = EmailTemplate -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @email_template.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= User.find(@email_template.user_id).first_name%></dd>
  <dt><strong><%= model_class.human_attribute_name(:MailSubject) %>:</strong></dt>
  <dd><%= @email_template.mailsubject %></dd>
  <dt><strong><%= model_class.human_attribute_name(:EmailFrom) %>:</strong></dt>
  <dd><%= @email_template.mailfrom %></dd>
  <dt><strong><%= model_class.human_attribute_name(:content) %>:</strong></dt>
  <dd><%= @email_template.content %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              email_templates_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_email_template_path(@email_template), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              email_template_path(@email_template),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
