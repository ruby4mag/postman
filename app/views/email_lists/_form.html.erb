<%= form_for @email_list, :html => { :enctype => "multipart/form-data" , :class => "form-horizontal email_list" } do |f| %>

    <% if @email_list.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@email_list.errors.count, "error") %> prohibited this email_list from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @email_list.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@email_list[:name]) %>
  </div>


<br>
<p>
<label class="control-label" for="email_list_name">Please specify a file</label>
<input type="file" name="email_list[datafile]" size="40">
</p>
<br>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            email_lists_path, :class => 'btn btn-default' %>

<% end %>
